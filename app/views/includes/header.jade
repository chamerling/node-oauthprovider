
header#header
  .navbar.navbar-fixed-top(role='navigation')
    .navbar-inner
      .container
        a.brand(href='/') OAuth Provider
        .nav-collapse.collapse
          ul.nav
            li
              a(href='/applications', title="applications listing") Applications
            li
              a(href="/applications/new", title="new application") New
          ul.nav.pull-right
            if (req.isAuthenticated())
              li
                a(href="/users/"+req.user.id, title="Profile") Profile
              li
                a(href="/logout", title="logout") Logout
            else
              li
                a(href="/login", title="Login") Login
